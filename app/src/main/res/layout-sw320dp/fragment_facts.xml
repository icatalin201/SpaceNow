<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/facts"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryTransparent">

        <TextView
            android:id="@+id/fact"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_above="@id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/left"
                android:padding="10dp"
                android:src="@drawable/ic_round_keyboard_arrow_left_24px"
                android:contentDescription="@string/facts"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/right"
                android:padding="10dp"
                android:layout_marginStart="50dp"
                android:src="@drawable/ic_round_keyboard_arrow_right_24px"
                android:contentDescription="@string/facts"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/no_content_view" />

</FrameLayout>