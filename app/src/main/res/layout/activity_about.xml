<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorSmokeWhite"
    tools:context=".view.activity.AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolbarTheme"
        android:translationZ="1dp"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/info"
        android:layout_below="@id/toolbar"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_centerVertical="true"
                android:id="@+id/logo"
                android:tint="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/icons_telescope"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <LinearLayout
                android:id="@+id/info2"
                android:layout_toEndOf="@id/logo"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="0dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/app_name_extended"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/appversion"
                    android:textColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/credits"
        android:layout_below="@id/info"
        android:padding="@dimen/padding_8"
        android:text="@string/credits"
        android:gravity="center"
        android:elevation="2dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/privacy"
            android:drawableEnd="@drawable/ic_baseline_lock_24px"
            android:textColor="@color/colorPrimary"
            android:text="@string/privacy_policy"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/share"
            android:drawableEnd="@drawable/ic_baseline_share_24px"
            android:textColor="@color/colorPrimary"
            android:text="@string/share"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/review"
            android:drawableEnd="@drawable/ic_baseline_star_rate_18px"
            android:textColor="@color/colorPrimary"
            android:text="@string/rate"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>