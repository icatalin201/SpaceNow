<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorSmokeWhite"
    tools:context=".old.activity.AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/myToolbarTheme"
        android:translationZ="1dp"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/info"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/logo"
                android:tint="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/icons_telescope"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <LinearLayout
                android:id="@+id/info2"
                android:layout_toEndOf="@id/logo"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="0dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/app_name_extended"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/app_version"
                    android:textColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:padding="20dp"
        android:text="@string/app_description"
        android:elevation="2dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="2dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/label_like"
        android:layout_margin="10dp"
        android:text="@string/like"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/buttons"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/share"
            android:contentDescription="@string/share"
            android:padding="10dp"
            android:onClick="share"
            android:layout_marginEnd="10dp"
            android:tint="@color/colorPrimary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_share_24px"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageButton
            android:id="@+id/rate"
            android:contentDescription="@string/rate"
            android:padding="10dp"
            android:onClick="rate"
            android:tint="@color/colorPrimary"
            android:layout_marginStart="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_star_rate_18px"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/label"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="@string/similar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/similar"
        app:contentPadding="10dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="getSpace"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawableTop="@drawable/ic_launcher_space"
            android:drawablePadding="6dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/space_infinity"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>