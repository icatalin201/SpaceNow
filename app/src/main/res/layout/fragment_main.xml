<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_16">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/primaryDark"
            app:cardCornerRadius="8dp"
            app:layout_constraintHeight_percent="0.49"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_apod_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <WebView
                android:id="@+id/main_apod_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/primaryDark"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.49">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/main_roadster_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintHeight_percent="0.6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/roadster" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_roadster_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingTop="@dimen/padding_8"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingBottom="@dimen/padding_8"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/size_20"
                    app:layout_constraintBottom_toBottomOf="@id/main_roadster_image" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_roadster_earth_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingTop="@dimen/padding_8"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingBottom="@dimen/padding_8"
                    android:text="@string/earth_distance"
                    app:layout_constraintTop_toBottomOf="@id/main_roadster_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_roadster_mars_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingTop="@dimen/padding_8"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingBottom="@dimen/padding_8"
                    android:text="@string/mars_distance"
                    app:layout_constraintTop_toBottomOf="@id/main_roadster_earth_distance" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_roadster_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingTop="@dimen/padding_8"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingBottom="@dimen/padding_8"
                    android:text="@string/roadster_speed"
                    app:layout_constraintTop_toBottomOf="@id/main_roadster_mars_distance" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
