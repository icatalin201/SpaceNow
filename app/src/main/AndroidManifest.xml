<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="space.pal.sig">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Space"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_Full"
        android:usesCleartextTraffic="true">
        <activity
            android:theme="@style/AppTheme"
            android:name=".view.activity.WebViewActivity"/>
        <activity
            android:theme="@style/AppTheme"
            android:name=".view.activity.AboutActivity" />
        <activity
            android:theme="@style/AppTheme"
            android:name=".view.activity.MainActivity" />
        <activity
            android:theme="@style/AppTheme"
            android:name=".view.activity.FeedActivity" />
        <activity
            android:theme="@style/AppTheme"
            android:name=".view.activity.NewsActivity" />
        <activity
            android:theme="@style/AppTheme"
            android:name=".view.activity.ApodActivity" />
        <activity
            android:theme="@style/AppTheme"
            android:name=".view.activity.LaunchActivity" />
        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>